<%= simple_form_for(@post,
  html: { class: 'form-horizontal well' }
  ) do |f| %>
  <%= f.error_notification %>

    <fieldset>
      <%= form_legend %>

    <div class="form-inputs">
      <%= f.input :subject
       %>
      <%= f.input :body
       %>
      <%= f.input :user
       %>
      <%= f.input :release, html5: true
       %>
    </div>

    <div class="offset-sm-3 col-sm-9 offset-md-2 col-md-10">
      <%= f.button :submit, class: 'btn btn-primary' %>
      <%= cancel_button %>
    </div>
  </fieldset>
<% end %>
