<h1><%= t('controller.posts') %></h1>

<table id="dataTable" class="table table-bordered table-striped dataTable table-hover">
<thead>
  <tr>
    <th><%= t('attributes.subject') %></th>
    <th><%= t('attributes.body') %></th>
    <th><%= t('attributes.user') %></th>
    <th><%= t('attributes.release') %></th>
    <th></th>
  </tr>
</thead>
<tbody>

<% @posts.each do |post| %>
  <%= content_tag_for(:tr, post) do %>
    <td><%= post.subject %></td>
    <td><%= post.body %></td>
    <td><%= post.user %></td>
    <td><%= post.release %></td>
    <td class="nowrap">
      <%= show_link post %>
      <%= edit_link post %>
      <%= delete_link post %>
    </td>
  <% end %>
<% end %>
</tbody>
</table>

<br />

<%= back_link %>
<%= new_link Post %>
